doctype html
html
  head
    meta(charset="utf-8")
    link(href="./css/index.css" rel="stylesheet")

  body
    .viewport
      .world
        .grid

        .welcome
          .content
            .ui-text
              | Welcome

        .hud.top.left
          .border-slinky
            - for (var x = 1; x < 100; x++)
              b
          .content
            .ui-text
              | 150 mph

        .hud.top.right
          .border-slinky
            - for (var x = 1; x < 100; x++)
              b
          .content
            .ui-text
              | 10 min

        .hud.bottom.left
          .background
          .border
          .content
            .ui-text
              | 74°F

        .hud.bottom.right
          .background
          .border
          .content
            .ui-text
              | 3:42pm

        #tetris
          #tetris-wrap
            #tetris-wrap-inner
              #tetris-main
              #tetris-overlay
                #tetris-message
              #tetris-side
                #tetris-side-inner
                  #tetris-next
                    #tetris-next-inner
                  #tetris-scores
                    dl
                      dt Level
                      dd#tetris-level 1
                    dl
                      dt Score
                      dd#tetris-score 0
                    dl
                      dt Singles
                      dd#tetris-singles 0
                    dl
                      dt Doubles
                      dd#tetris-doubles 0
                    dl
                      dt Triples
                      dd#tetris-triples 0
                    dl
                      dt Tetris
                      dd#tetris-quads 0
                  #tetris-keys
                    dl
                      dt Move
                      dd ← ↓ →
                    dl
                      dt Rotate
                      dd ↑
                    dl
                      dt Drop
                      dd Spacebar
                    dl
                      dt Pause
                      dd Pause/Esc

    script(src="./js/index.js")
