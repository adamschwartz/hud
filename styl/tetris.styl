@import nib

@import colors
@import fonts

#tetris
  position absolute
  top 0
  right 0
  left 0
  bottom 0
  margin auto
  height 604px
  //width 606px
  //padding-left 152px
  width 454px
  border-radius 1.5em 1.5em 1.5em 0

  .tetris-brick
    position relative

    b
      position absolute
      top 0
      right 0
      bottom 0
      left 0
      display block
      border 1px solid rgba(neon, .1)

      //border-radius 100px
      border-radius 100px

      // for num in (1..10)
      //   &:nth-child({ num })
      //     transform translateZ(-(num * .25em))
      //     opacity 1 - (num / 10)

      &:nth-child(2)
        transform translateZ(-1em)


    // &.blue
