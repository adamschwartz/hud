@import nib

.clock
  position fixed
  top 8em
  left 2em
  width 8em
  height 8em
  border-radius 50%
  transform rotateZ(-90deg) rotateX(-46deg) rotateY(24deg)
  transform-origin 0 0

  .seconds, .minutes, .hours
    position absolute

    .progress
      border-width .5em

  .seconds
    width 8em
    height 8em
    top 0
    left 0
    opacity .25

  .minutes
    width 6em
    height 6em
    top 1em
    left 1em
    opacity .5
    //transform translateZ(.3em)
    transform translateZ(.5em)

  .hours
    width 4em
    height 4em
    top 2em
    left 2em
    opacity .75
    //transform translateZ(.6em)
    transform translateZ(1em)
