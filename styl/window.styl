@import nib

@import vertical-centering
@import colors
@import fonts

.window
  display block
  position fixed !important // TODO
  background rgba(darken(neon, 60%), .1)
  box-shadow inset 0 0 0 1px rgba(darken(neon, 40%), .5)
  opacity 0
  transform scale(.05) translateZ(-20em)
  animation-name window-fly-in
  animation-duration 0.5s
  animation-fill-mode forwards

  .bar
    position absolute
    top 0
    left 0
    width 100%
    height 6em
    background pink

  iframe
    position absolute
    left 0
    top 6em
    width 100%
    height calc(100% - 6em)
    border 0
    -webkit-filter sepia(1) hue-rotate(120deg)
    transition opacity .5s ease-in-out
    opacity .4

  &:hover iframe
    opacity 1

@keyframes window-fly-in
  to
    opacity 1
    transform scale(1)
