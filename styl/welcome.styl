@import nib

@import vertical-centering
@import colors
@import fonts

.welcome
  vertical-centering-outer()
  position fixed
  top 0
  left 0
  height 100%
  width 100%
  transform translateZ(-5em)

  .content
    vertical-centering-inner()
    text-align center

    .ui-text
      ui-font()
      color neon
      glow(@color)
      font-size 2.5em
      font-weight 400
      position relative
      top -0.15em

.welcome
  opacity 0
