@import nib

.zones
  position fixed
  top 0
  right 0
  bottom 0
  left 0

  .zone
    position absolute
    height 100%
    width 100%

    &[data-zoneX="0"][data-zoneY="0"]
      left 0
      top 0

    &[data-zoneX="0"][data-zoneY="-1"]
      left 0
      top -100%

    &[data-zoneX="1"][data-zoneY="0"]
      left 100%
      top 0
